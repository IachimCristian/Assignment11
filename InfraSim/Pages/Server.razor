@using Microsoft.AspNetCore.Components

<div class="server-container">
    <img src="images/server.png" alt="Server" class="server-image" />
    <span class="server-label">@Label</span>
</div>

<style>
    .server-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        background-color: #f0f0f0;
        padding: 16px;
        border-radius: 8px;
        width: 120px;
        height: 100px;
    }

    .server-image {
        width: 48px;
        height: 48px;
    }

    .server-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #333;
    }
</style>

@code {
    [Parameter]
    public string Label { get; set; }
}
